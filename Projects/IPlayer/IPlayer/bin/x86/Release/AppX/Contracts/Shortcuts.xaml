<UserControl
    x:Class="IPlayer.Contracts.Shortcuts"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:IPlayer.Contracts"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="768"
    d:DesignWidth="346">

    <Grid  Background="{StaticResource AppBarItemForegroundThemeBrush}" Width="346">
        <Grid.RowDefinitions>
            <RowDefinition Height="65*"/>
            <RowDefinition Height="703*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
        	<Grid.Background>
        		<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
        			<GradientStop Color="Black" Offset="0"/>
        			<GradientStop Color="#FFC7BDBD" Offset="1"/>
        		</LinearGradientBrush>
        	</Grid.Background>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="25*"/>
                <ColumnDefinition Width="96*"/>
            </Grid.ColumnDefinitions>
            <Button x:ConnectionId='1' Grid.Row="0" Grid.Column="0" Style="{StaticResource BackButtonStyle}" Height="55" Margin="10,10,0,0" Width="51" VerticalAlignment="Top"                      />
            <TextBlock Grid.Row="0" VerticalAlignment="Center" Grid.Column="1" FontSize="36" Text="Shortcuts" Foreground="White" Height="44" Margin="10,11,-10,10"/>
        </Grid>
        <RichTextBlock Grid.Row="1" FontSize="24" Foreground="Black" FontStyle="Normal">
            <Paragraph>
                <LineBreak></LineBreak>
                1.Open File - O
                <LineBreak></LineBreak>
                <LineBreak></LineBreak>
               2.Open Folder - F<LineBreak></LineBreak>
                <LineBreak></LineBreak>
                3.View List - L<LineBreak></LineBreak>
                <LineBreak></LineBreak>
                4.Pause/Play -SpaceBar<LineBreak></LineBreak>
                <LineBreak></LineBreak>
                5.Play Next - Right<LineBreak></LineBreak>
                <LineBreak></LineBreak>
                6.Play Previous - Left<LineBreak></LineBreak>
                <LineBreak></LineBreak>
                7.Increase Volume - Up
                <LineBreak></LineBreak>
                <LineBreak>
                </LineBreak>
                8.Decrease Volume - Down<LineBreak></LineBreak>
            </Paragraph>
        </RichTextBlock>
    </Grid>
</UserControl>

